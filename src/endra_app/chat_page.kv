#:import QRCodeWidget kivy_garden.qrcode
<MessageView>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 50
    spacing: 5
    padding: 5
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # background colour
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id: label
        color: 0.9, 0.9, 0.9, 1
        size_hint: 0.6, 1
        font_size: sp(18)
        font_context: 'system://myapp'
        # font_name: 'LibertinusSerif-Regular.otf'
<MessageEditorView>
    orientation: 'vertical'
    TextInput:
        id: text_input_txbx
        background_color: 0.1, 0.1, 0.1, 1  # Dark background
        foreground_color: 0.9, 0.9, 0.9, 1  # Light text color
        hint_text: 'message text'  # Placeholder text
        font_size: sp(18)
        font_context: 'system://myapp'
        # font_name: 'LibertinusSerif-Regular.otf'
<MessagePageView>
    orientation: 'vertical'
    size_hint_x: 0.7
    size_hint_y: 1
    spacing: 5
    padding: 5
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1  # background colour
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: top_bar_lyt
        orientation: 'horizontal'
        size_hint_y: None
        
        Button:
            id: invite_btn
            size_hint_x: 1
            text: "invite to this chat"
            size_hint: 1, None
            height: 50
            background_color: 0.8, 0.3, 0.3, 1  # Light red button        
            font_size: sp(18)
            font_context: 'system://myapp'
            # font_name: 'LibertinusSerif-Regular.otf'
    ScrollView:
        id: scroll_view
        size_hint: 1, 1
        
        GridLayout:
            id: scroll_layout
            cols: 1
            spacing: 10
            size_hint_y: None
    BoxLayout:
        id: add_message_lyt
        orientation: 'horizontal'
        size_hint_y: None
        BoxLayout:
            id: add_message_btn_lyt
            size_hint_x: 3
            
        Button:
            id: add_message_btn
            size_hint_x: 1
            text: "Send"
            size_hint: 1, None
            height: 50
            background_color: 0.8, 0.3, 0.3, 1  # Light red button
            font_size: sp(18)
            font_context: 'system://myapp'
            # font_name: 'LibertinusSerif-Regular.otf'
