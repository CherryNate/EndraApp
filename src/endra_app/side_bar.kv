#:import QRCodeWidget kivy_garden.qrcode
<CorrespondenceHeaderView>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 50
    spacing: 5
    padding: 5
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # background colour
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id: label
        font_size: 16
        color: 0.9, 0.9, 0.9, 1
        size_hint: 0.6, 1
<SideBarView>
    orientation: 'vertical'
    size_hint_x: 0.3
    size_hint_y: 1
    spacing: 5
    padding: 5
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1  # background colour
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        id: my_profile_btn
        text: "My Profile"
        size_hint: 1, None
        height: 50
        background_color: 0.8, 0.3, 0.3, 1  # Light red button
    ScrollView:
        id: scroll_view
        size_hint: 1, 1
        
        GridLayout:
            id: scroll_layout
            cols: 1
            spacing: 10
            size_hint_y: None

    Button:
        id: add_corresp_btn
        text: "Add Correspondence"
        size_hint: 1, None
        height: 50
        background_color: 0.8, 0.3, 0.3, 1  # Light red button
<AddCorrespondencePopupView@Popup>:
    title:'New Correspondence'
    size_hint: None, None
    size_hint: 0.9,0.9
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: text_input_txbx
            background_color: 0.1, 0.1, 0.1, 1  # Dark background
            foreground_color: 0.9, 0.9, 0.9, 1  # Light text color
            hint_text: 'paste invitation code here'  # Placeholder text
        Button:
            id: join_conv_btn
            size_hint_y:1
            text: 'join existing correspondence'
        Button:
            id: create_conv_btn
        
            size_hint_y:1
            text: 'create new correspondence'
        Button:
            size_hint_y:1
            text: 'cancel'
            on_release: root.dismiss()
<ProfileSettingPopupView@Popup>:
    title:'Profile Settings'
    size_hint: None, None
    size_hint: 0.9,0.9
    auto_dismiss: True
    BoxLayout:
        id: layout
        orientation: 'vertical'
        ScrollView:
            id: scroll_view
            size_hint: 1, 1
            
            GridLayout:
                id: scroll_layout
                cols: 1
                spacing: 10
                size_hint_y: None

        Button:
            id: add_device_btn
            text: "Add Device"
            size_hint: 1, None
            height: 50
            background_color: 0.8, 0.3, 0.3, 1  # Light red button
